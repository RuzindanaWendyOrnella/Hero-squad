{{#partial "content"}}

   <h1 style="text-align:center">Add a new Hero!</h1>

   <form style="background-color:white;text-align:center" action="/posts/new" method="post">
       <label for="name">Name</label><br>
       <input id="name" name="name" type="text"><br>
       <label for="age">Age</label><br>
       <input id="age" name="age" type="text"><br>
       <label for="power">Power</label><br>
       <input id="power" name="power" type="text"><br>
       <label for="weakness">Weakness</label><br>
       <input id="weakness" name="weakness" type="text"><br><br>
       <button type="submit" class="btn btn-default">Add new blog post</button><br>
   </form>
{{/partial}}

