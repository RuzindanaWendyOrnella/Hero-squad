{{#partial "content"}}
    <div style="background-color:black;text-align:center">
        <h1 style="color:white">Current post:</h1>
        <p style="color:white">name: {{post.name}}</p>
        <p style="color:white">Age: {{post.age}}</p>
        <p style="color:white">Powers: {{post.power}}</p>
        <p style="color:white">Weaknesses: {{post.weakness}}</p>
        <h5 style="color:white">Created At:</h5>
        <p style="color:white"> {{ post.createdAt }}</p>


            <a href="/posts/{{post.id}}/update">Edit this post</a>
            <a href="/posts/{{post.id}}/delete">DELETE this post (no undo)</a>

    </div>

{{/partial}}

